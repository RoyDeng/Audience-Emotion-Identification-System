@{
    ViewBag.Title = "會員登入";
}

<section class="g-bg-gray-light-v5">
    <div class="container g-py-100">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-lg-5">
                <div class="u-shadow-v21 g-bg-white rounded g-py-40 g-px-30">
                    <header class="text-center mb-4">
                        <h2 class="h2 g-color-black g-font-weight-600">會員登入</h2>
                    </header>
                    <form class="g-py-15" action="~/LoginProcess" method="post">
                        <div class="mb-4">
                            <label class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13">使用者名稱</label>
                            <input class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15" type="text" name="username" placeholder="使用者名稱">
                        </div>
                        <div class="g-mb-35">
                            <label class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13">密碼</label>
                            <input class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15 mb-3" type="password" name="password" placeholder="密碼">
                            <div class="row justify-content-between">
                                <div class="col align-self-center text-right">
                                    <a class="g-font-size-12" href="ForgetPassword">忘記密碼?</a>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <button class="btn btn-md btn-block u-btn-primary rounded g-py-13" type="submit">登入</button>
                        </div>
                    </form>
                    @if(ViewData["msg"] != null)
                    {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        @ViewData["msg"]
                    </div>
                    }
                    <footer class="text-center">
                        <p class="g-color-gray-dark-v5 g-font-size-13 mb-0">還沒有申請會員嗎?立即<a class="g-font-weight-600" href="Register">註冊</a></p>
                    </footer>
                </div>
            </div>
        </div>
    </div>
</section>